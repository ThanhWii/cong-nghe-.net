@model QuanLyPhongTro.Phong
@using QuanLyPhongTro

@{
    ViewBag.Title = "Chi tiết phòng";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Chi tiết phòng</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <hr />
        <dl class="dl-horizontal">
            <dt>Mã phòng</dt>
            <dd>@Model.MaPhong</dd>
            <dt>Số phòng</dt>
            <dd>@Model.SoPhong</dd>
            <dt>Loại phòng</dt>
            <dd>@Model.LoaiPhong</dd>
            <dt>Giá thuê tháng</dt>
            <dd> @string.Format("{0:C0}", Model.GiaThueThang)</dd>
            <dt>Trạng thái thuê</dt>
            <dd><span class="label label-@(Model.DaThue ? "success" : "danger")">@(Model.DaThue ? "Đã thuê" : "Chưa thuê")</span></dd>

        </dl>
    </div>
</div>

@if (ViewBag.Nuoc != null)
{
    <div class="panel panel-default">
        <div class="panel-body">
            <h4>Thông tin tiền nước</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>Ngày đọc số nước</dt>
                <dd>@ViewBag.Nuoc.NgayDocSo</dd>
                <dt>Chỉ số cũ nước</dt>
                <dd>@ViewBag.Nuoc.ChiSoCu</dd>
                <dt>Chỉ số mới nước</dt>
                <dd>@ViewBag.Nuoc.ChiSoMoi</dd>
                <dt>Giá tiền nước</dt>
                <dd> @string.Format("{0:C0}", ViewBag.Nuoc.GiaTien)</dd>
            </dl>
        </div>
    </div>
}

@if (ViewBag.Dien != null)
{
    <div class="panel panel-default">
        <div class="panel-body">
            <h4>Thông tin tiền điện</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>Ngày đọc số điện</dt>
                <dd>@ViewBag.Dien.NgayDocSo</dd>
                <dt>Chỉ số cũ điện</dt>
                <dd>@ViewBag.Dien.ChiSoCu</dd>
                <dt>Chỉ số mới điện</dt>
                <dd>@ViewBag.Dien.ChiSoMoi</dd>
                <dt>Giá tiền điện</dt>
                <dd> @string.Format("{0:C0}", ViewBag.Dien.GiaTien)</dd>
            </dl>
        </div>
    </div>
}

@if (ViewBag.KhachThue.Count > 0)
{
    <div class="panel panel-default">
        <div class="panel-body">
            <h4>Danh sách khách hàng đã thuê phòng</h4>
            <hr />
            <table class="table table-striped">
                <tr>
                    <th>Họ và tên đệm</th>
                    <th>Tên</th>
                    <th>CMND</th>
                    <th>Điện thoại</th>
                    <th>Ngày vào ở</th>
                    <th>Ngày trả phòng</th>
                </tr>
                @foreach (var khach in ViewBag.KhachThue)
                {
                    <tr>
                        <td>@khach.HoTenDem</td>
                        <td>@khach.Ten</td>
                        <td>@khach.CMND</td>
                        <td>@khach.DienThoai</td>
                        <td>@khach.NgayVaoO</td>
                        <td>@khach.NgayTraPhong</td>
                    </tr>
                }
            </table>
        </div>
    </div>
}
