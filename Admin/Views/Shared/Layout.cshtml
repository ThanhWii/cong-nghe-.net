<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/Site.css" asp-append-version="true"/>
    <style>
        .nav-item.active {
            background-color: #808080; /* Màu xám */
        }
    </style>

    <script>
        $(document).ready(function () {
            // Kiểm tra nếu đã có một mục menu được chọn trong sessionStorage
            var selectedMenuItem = sessionStorage.getItem("selectedMenuItem");
            if (selectedMenuItem) {
                // Loại bỏ lớp "active" khỏi tất cả các mục menu
                $(".nav-item").removeClass("active");

                // Thêm lớp "active" cho mục menu được chọn từ sessionStorage
                $("a[href='" + selectedMenuItem + "']").parent().addClass("active");
            }

            $(".nav-item").click(function () {
                // Lấy đường dẫn của mục menu được click
                var menuItemHref = $(this).find("a").attr("href");

                // Lưu đường dẫn của mục menu vào sessionStorage
                sessionStorage.setItem("selectedMenuItem", menuItemHref);

                // Loại bỏ lớp "active" khỏi tất cả các mục menu
                $(".nav-item").removeClass("active");

                // Thêm lớp "active" cho mục được click
                $(this).addClass("active");
            });
        });
    </script>


</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky">
                    <!-- Sidebar logo -->
                    <a class="navbar-brand" href="#">
                        <img src="~/images/img-01.png" alt="">
                    </a>

                    <!-- Navigation items -->
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="~/Admin/Phong">
                                <i class="bi bi-house-door"></i> Quản lý Phòng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/Nuoc">
                                <i class="bi bi-person"></i> Quản lý nước
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/Dien">
                                <i class="bi bi-gear"></i> Quản lý điện
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/KH">
                                <i class="bi bi-gear"></i> Quản lý khách hàng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/DH">
                                <i class="bi bi-gear"></i> Quản lý hóa đơn
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/TaiKhoan">
                                <i class="bi bi-gear"></i> Quản lý tài khoản
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Admin/Login">
                                <i class="bi bi-gear"></i> Đăng xuất
                            </a>
                        </li>
                    </ul>

                    <!-- Thêm một dropdown menu -->
                    <ul class="nav">
                        <li >
                            <p class="nav-link">
                                Xin chào @Session["TaiKhoan"]
                            </p>
                        </li>
                    </ul>


                </div>
            </nav>


            <!-- Main content -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

</body>
</html>
